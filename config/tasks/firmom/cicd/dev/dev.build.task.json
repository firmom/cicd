{
  "name": "BuildDevFirmomCICD",
  "entrypoint": true,
  "extends": [
    "CloneDevFirmomCICD",
    "BuildBackendDevFirmomCICD",
    "BuildFrontendDevFirmomCICD"
  ],
  "locks": ["/data/code/firmom/cicd-dev!deploy"],
  "executor": "onlylast",
  "trigger": ["DeployDevFirmomCICD"],
  "script": {
    "cwd": "/data/code/firmom/cicd-dev/src/github.com/firmom/cicd",
    "commands": [{
      "command": "docker",
      "args": ["build", ".", "-t", "firmom/cicd:dev", "--no-cache"]
    }, {
      "command": "sh",
      "args": ["-x", "/app/config/helpers/docker-push.sh", "firmom/cicd:dev"]
    }]
  }
}